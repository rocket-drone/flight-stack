[DEFAULT]
include = cat $(dirname $MR_CONFIG)/tools/scripts/mrextras

[firmware/px4/src]
checkout = git clone 'git@github.com:rocket-drone/px4-firmware.git' 'src'
post_checkout = add_upstream_remote

[firmware/ardupilot/src]
checkout = git clone 'git@github.com:rocket-drone/ardupilot.git' 'src'
post_checkout = add_upstream_remote

[ground/qgroundcontrol/src]
checkout = git clone --recursive 'git@github.com:rocket-drone/qgroundcontrol.git' 'src'
post_checkout = add_upstream_remote

[ground/apm_planner/src]
checkout = git clone 'git@github.com:rocket-drone/apm_planner.git' 'src'
post_checkout = add_upstream_remote

[ground/opentx/src]
checkout = git clone 'git@github.com:rocket-drone/opentx.git' 'src'
post_checkout = add_upstream_remote
